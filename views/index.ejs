<%- include('./partials/header.ejs') %>
  
<div class="container">
    <div class="row">
        <div class="col-sm-6 mt-5">
            <h2 class="alert alert-success text-center">Add New Employee</h2>
        <form method="post">
            <div class="mb-3">
                <label for="name" class="form-label">Name</label>
                <input type="text" class="form-control" name="name" id="name">
            </div>

            <div class="mb-3">
                <label for="age" class="form-label">Age</label>
                <input type="text" class="form-control" name="age" id="age">
            </div>
            <div class="mb-3">
                <label for="id" class="form-label">Employee Id</label>
                <input type="text" class="form-control" name="employeeid" id="id">
            </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        </form>
        </div>
        
        <div class="col-sm-6 mt-5">
            <h2 class="alert alert-success text-center">List of Employees</h2>
        
        <%# Show all Data %>
        <table class="table table-striped table-hover">
<thead>
    <tr>
        <th scope="col">No</th>
        <th scope="col">Name</th>
        <th scope="col">Age</th>
        <th scope="col">Id</th>
        <th scope="col">Action</th>
    </tr>
</thead>
<tbody>
    <% var i=1 %>
    <% result.forEach((item)=>{ %>
        <tr>
            <td><%= i++ %></td>
            <td><%= item.name %></td>
            <td><%= item.age %></td>
            <td><%= item.employeeid %></td>
            <td>
                
                    
                        
                <form action="/employee/edit/<%= item._id%>" method="get" class="d-inline">
                        
                    <button type="submit" class="btn btn-success btn-sm rounded-0" type="button" data-toggle="tooltip" 
                data-placement="top" title="Edit"><i class="fa fa-edit"></i></button>
                </form>
                  
    <form action="/employee/delete/<%= item._id %>" method ="post" class="d-inline">
        <button type="submit" class="btn btn-danger btn-sm rounded-0" type="button" 
        data-toggle="tooltip" data-placement="top" title="Delete"><i class="fa fa-trash"></i></button>
    </form>
                    
                        
                
                
            </td>
        </tr>
    <% })%>
    
</tbody>
        </table>
        
        </div> 
    </div>
</div>

<%- include('./partials/footer.ejs') %>

    

    